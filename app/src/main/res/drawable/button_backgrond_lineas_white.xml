<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- Fondo al presionar: un color sólido (puedes ajustar el color) -->
            <solid android:color="#FFFFFF"/> <!-- blanco con transparencia para toque -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- borde blanco -->
            <corners android:radius="30dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!-- Fondo transparente (sin color sólido) -->
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- borde blanco -->
            <corners android:radius="30dp"/>
        </shape>
    </item>
</selector>
