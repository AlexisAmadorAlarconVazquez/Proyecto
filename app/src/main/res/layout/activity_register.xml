<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">



        <TextView
            android:text="@string/registro_completo_mensaje"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"/>

        <!-- Usuario -->
        <EditText
            android:id="@+id/etUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/usuario_hint"
            android:drawableStart="@drawable/usuarioicon"
            android:background="@drawable/button_backgrond_lineas_white"
            android:padding="10dp"
            android:inputType="text"/>

        <!-- Nombre Completo -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nombre_completo_hint"
            android:drawableStart="@drawable/usuarioicon"
            android:background="@drawable/button_backgrond_lineas_white"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"/>

        <!-- Fecha de Nacimiento -->
        <EditText
            android:id="@+id/etFechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fecha_nacimiento_hint"
            android:focusable="false"
            android:drawableStart="@drawable/calendaricon"
            android:background="@drawable/button_backgrond_lineas_white"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <!-- Género -->
        <Spinner
            android:id="@+id/spGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_backgrond_lineas_white"
            android:layout_marginTop="10dp"/>

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint"
            android:drawableStart="@drawable/emailicon"
            android:background="@drawable/button_backgrond_lineas_white"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <!-- Contraseña -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:drawableStart="@drawable/passwordicon"
            android:background="@drawable/button_backgrond_lineas_white"
            android:inputType="textPassword"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <!-- Confirmar Contraseña -->
        <EditText
            android:id="@+id/etConfirmarPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirmar_password_hint"
            android:drawableStart="@drawable/passwordicon"
            android:background="@drawable/button_backgrond_lineas_white"
            android:inputType="textPassword"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <!-- Botón -->
        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registrar_button"
            android:backgroundTint="#0088ff"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"/>

        <!-- Inicia sesión -->
        <TextView
            android:id="@+id/tvIniciarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iniciar_sesion_prompt"
            android:textColor="#0077cc"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</ScrollView>
