<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_constraintEnd_toEndOf="parent"
            android:layout_constraintStart_toStartOf="parent"
            android:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/redondoblanco_background"
            android:gravity="center"
            android:padding="12dp"
            android:text="Registro"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            />

        <TextView
            android:text="@string/text_complete_register_hint"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_marginTop="15dp"/>

        <!-- Usuario -->
        <EditText
            android:id="@+id/etUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username_hint"
            android:drawableStart="@drawable/usuarioicon"
            android:background="@drawable/button_backgrond_lineas_white"
            android:padding="11dp"
            android:inputType="text"
            />

        <!-- Nombre Completo -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_person_hint"
            android:drawableStart="@drawable/usuarioicon"
            android:background="@drawable/button_backgrond_lineas_white"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"
            />

        <!-- Fecha de Nacimiento -->
        <EditText
            android:id="@+id/etFechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/date_hint"
            android:focusable="false"
            android:drawableStart="@drawable/calendaricon"
            android:background="@drawable/button_backgrond_lineas_white"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <!-- Género -->
        <Spinner
            android:id="@+id/spGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_backgrond_lineas_white"
            android:layout_marginTop="10dp"/>

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mail_hint"
            android:drawableStart="@drawable/emailicon"
            android:background="@drawable/button_backgrond_lineas_white"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <!-- Contraseña -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:drawableStart="@drawable/passwordicon"
            android:background="@drawable/button_backgrond_lineas_white"
            android:inputType="textPassword"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <!-- Confirmar Contraseña -->
        <EditText
            android:id="@+id/etConfirmarPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_password_hint"
            android:drawableStart="@drawable/passwordicon"
            android:background="@drawable/button_backgrond_lineas_white"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <!-- Botón -->
        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_registrate"
            android:backgroundTint="#0088ff"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"/>

        <!-- Inicia sesión -->

        <TextView
            android:id="@+id/tvTienesCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/account_hint"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvIniciarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/login_hint"
            android:textColor="#000" />
    </LinearLayout>
</ScrollView>
